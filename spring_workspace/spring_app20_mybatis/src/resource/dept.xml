<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.co.jhta.app.dept">
	<select id="selectAll" resultType="ddto">
		SELECT deptno, dname, loc
		FROM dept
	</select>
	
	<select id="selectOne" resultType="kr.co.jhta.app.dto.DeptDTO">
		SELECT deptno, dname, loc
		FROM dept
		WHERE deptno = #{deptno}
	</select>
	
	
	<insert id="insertOne" parameterType="kr.co.jhta.app.dto.DeptDTO">
		INSERT INTO dept
		VALUES (#{deptno}, #{dname}, #{loc})
	</insert>
	
	<update id="updateOne" 	parameterType="kr.co.jhta.app.dto.DeptDTO">
		UPDATE dept
		SET dname = #{dname}, loc =#{loc}
		WHERE deptno = #{deptno}
	</update>
</mapper>